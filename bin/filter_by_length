import sys

from crumbs.utils.bin_utils import (main, parse_basic_process_args,
                                    create_basic_process_argparse)
from crumbs.utils.seq_utils import process_seq_packets
from crumbs.seqio import read_seq_packets, write_seq_packets
from crumbs.filters import FilterByLength


def _setup_argparse(description):
    'It returns the argument parser'
    parser = create_basic_process_argparse(description=description)
    parser.add_argument('-x', '--max', type=int, help='max length kept')
    parser.add_argument('-n', '--min', type=int, help='min length kept')
    parser.add_argument('-m', '--ignore_masked', action='store_true',
                        help='Count only the uppercased residues')
    parser.add_argument('-r', '--reverse', help='Reverse the filtering',
                        action='store_true')
    return parser


def _parse_args(parser):
    'It parses the arguments'
    args, parsed_args = parse_basic_process_args(parser)
    args['max'] = parsed_args.max
    args['min'] = parsed_args.min
    args['ignore_masked'] = parsed_args.ignore_masked
    args['reverse'] = parsed_args.reverse
    return args


def filter_by_length():
    'The main function of the binary'
    description = 'It filters the sequences according to its length.'
    parser = _setup_argparse(description=description)
    args = _parse_args(parser)

    in_fhands = args['in_fhands']
    out_fhand = args['out_fhand']

    seq_packets = read_seq_packets(in_fhands, file_format=args['in_format'])
    filter_by_length = FilterByLength(minimum=args['min'], maximum=args['max'],
                                      ignore_masked=args['ignore_masked'])
    seq_packets, workers = process_seq_packets(seq_packets, [filter_by_length],
                                               processes=args['processes'])
    write_seq_packets(out_fhand, seq_packets, args['out_format'],
                      workers=workers)
    out_fhand.flush()

if __name__ == '__main__':
    sys.exit(main(filter_by_length))
