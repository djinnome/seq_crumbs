import sys

from crumbs.utils import main, create_basic_argparse, parse_basic_args
from crumbs.seqio import read_seqrecords, write_seqrecords
from crumbs.trim import trim_lowercased_seqs


def trim_by_case():
    'The main function of the head binary'
    description = 'Get first seqs from file[s]'
    parser = create_basic_argparse(description=description)
    args = parse_basic_args(parser)[0]

    in_fhands = args['in_fhands']
    out_fhand = args['out_fhand']

    seqs = read_seqrecords(in_fhands, file_format=args['in_format'])
    seqs = trim_lowercased_seqs(seqs)
    write_seqrecords(out_fhand, seqs, args['out_format'])

if __name__ == '__main__':
    sys.exit(main(trim_by_case))
